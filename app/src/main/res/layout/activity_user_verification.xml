<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserVerificationActivity">

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_width="240dp"
        android:layout_height="120dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:textSize="32sp"
        android:layout_gravity="center_horizontal"
        android:text="We are almost done!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_email"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:text="testuser@domain.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_weight="1"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:transitionName="verifyButton"
            android:id="@+id/verify_email"
            android:layout_gravity="center"
            android:clickable="true"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/mybutton"
            android:text="Verify Email"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:padding="2dp"
        android:textSize="17sp"
        android:textColor="#fff"
        android:text="Follow the link received in email, and finally tap the above 'Verify Email' button to complete your registration.\n\nOr, press the below button to cancel the process."
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cancel_registration"
        android:layout_gravity="center"
        android:clickable="true"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/mybutton"
        android:text="Cancel Registration"
        android:layout_width="230dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>